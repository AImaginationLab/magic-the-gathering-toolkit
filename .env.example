# MTG Toolkit Configuration
# Copy to .env and customize as needed

# =============================================================================
# Database Paths
# =============================================================================

# Path to unified MTG database (cards, images, prices, legalities)
# Default: resources/mtg.sqlite (relative to workspace root)
MTG_DB_PATH=resources/mtg.sqlite

# Path to user database (decks, collections, preferences)
# Default: ~/.mtg-spellbook/user_data.sqlite
USER_DB_PATH=~/.mtg-spellbook/user_data.sqlite

# Path to combo database
# Default: ~/.mtg-spellbook/combos.sqlite
COMBO_DB_PATH=~/.mtg-spellbook/combos.sqlite

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable slow query logging for performance debugging
# LOG_SLOW_QUERIES=false
# SLOW_QUERY_THRESHOLD_MS=100

# =============================================================================
# Cache Settings
# =============================================================================

# In-memory card cache
CACHE_MAX_SIZE=1000
CACHE_TTL_SECONDS=3600

# Maximum concurrent database operations
# DB_MAX_CONNECTIONS=5

# =============================================================================
# Image Cache
# =============================================================================

# Directory for cached card images
# Default: ~/.cache/mtg-spellbook/images
IMAGE_CACHE_DIR=~/.cache/mtg-spellbook/images

# Disk cache limit in MB (default 1GB, stores ~1000 high-res card images)
IMAGE_CACHE_MAX_MB=1024

# Number of images to keep in memory for instant access
IMAGE_MEMORY_CACHE_COUNT=20

# =============================================================================
# Data Cache (printings, synergies - stored as LZMA-compressed JSON)
# =============================================================================

# Directory for cached data
# Default: ~/.cache/mtg-spellbook/data
DATA_CACHE_DIR=~/.cache/mtg-spellbook/data

# Disk cache limit in MB
DATA_CACHE_MAX_MB=100
