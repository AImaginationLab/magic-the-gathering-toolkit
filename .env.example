# MTG MCP Server Configuration

# Path to MTGJson AllPrintings.sqlite database (required)
# Download from: https://mtgjson.com/downloads/all-files/
MTG_DB_PATH=resources/AllPrintings.sqlite

# Path to Scryfall database for images/prices (optional)
# See README for instructions on creating this file
SCRYFALL_DB_PATH=resources/scryfall.sqlite

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Cache settings
CACHE_MAX_SIZE=1000
CACHE_TTL_SECONDS=3600

# Image cache settings
# Directory for cached card images (default: ~/.cache/mtg-spellbook/images)
# IMAGE_CACHE_DIR=~/.cache/mtg-spellbook/images
# Disk cache limit in MB (default 1024 = 1GB, stores ~1000 card images as PNG)
IMAGE_CACHE_MAX_MB=1024
# Number of images to keep in memory for fast access
IMAGE_MEMORY_CACHE_COUNT=20

# Data cache settings (printings, synergies - stored as compressed JSON)
# Directory for cached data (default: ~/.cache/mtg-spellbook/data)
# DATA_CACHE_DIR=~/.cache/mtg-spellbook/data
# Disk cache limit in MB (default 100MB, gzip compressed)
DATA_CACHE_MAX_MB=100
